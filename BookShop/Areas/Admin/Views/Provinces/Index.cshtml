@model IEnumerable<BookShop.Models.Province>
@{
    ViewData["Title"] = "لیست استان‌ها";
}

    <div class="card p-0">
        <div class="card-header bg-light">
            لیست استان‌ها
        </div>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @TempData["Success"]

            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-warning alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true" class="lead">&times;</span>
                </button>
                @TempData["Error"]
            </div>
        }
        <p class="m-2">
            <a asp-action="Create" class="btn btn-success col-md-2">افزودن استان جدید</a>
        </p>
        <div class="card-body">

            <table class="table text-center">
                <thead>
                    <tr>
                        <th>نام استان</th>
                        <th>مشاهده شهرها</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ProvinceName</td>
                        <td>
                            <a asp-action="showcities" asp-route-id="@item.ProvinceID" class="btn btn-primary btn-sm">
                                شهرهای استان
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProvinceID" class="btn btn-info btn-icon"><i class="fa fa-edit text-white"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.ProvinceID" class="btn btn-danger btn-icon"><i class="fa fa-trash text-white"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
