@model BookShop.Models.Category

@{
    ViewData["Title"] = "ویرایش دسته‌بندی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card p-0">
    <div class="card-header  bg-light">
        ویرایش دسته‌بندی
    </div>
    <form asp-action="Edit">
        <div class="card-body">
            <input type="hidden" asp-for="CategoryID" />
            <div class="col-md-12 row">
                <div class="form-group col-md-6">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ParentID" class="control-label"></label>
                    <select asp-for="ParentID" class="form-control" asp-items="ViewBag.ParentID">
                        <option value="">انتخاب کنید</option>
                    </select>
                    <span asp-validation-for="ParentID" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer clearfix bg-light">
            <a asp-action="Index" class="btn"><i class="fa fa-arrow-alt-circle-right"> بازگشت </i></a>
            <button type="submit" class="btn btn-primary float-left">اعمال تغییرات</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

