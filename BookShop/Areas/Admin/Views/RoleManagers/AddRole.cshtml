@model BookShop.ViewModel.RolesViewModel
@{
}

    <div class="card">
        <div class="card-header bg-light">
            ایجاد نقش
        </div>
        <div class="card-body">
            @if (ViewBag.Error!=null)
            {
                <div class="alert alert-danger alert-dismissible">
                    @ViewBag.Error
                    <button class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <form asp-action="AddRole" method="post">
                <div class="col-md-8">
                    <div class="form-group">
                        <div class="col-md-12 pl-0">
                            <label>
                                نام نقش
                            </label>
                        </div>
                        <div class="col-md-12">
                            <input type="text" class="form-control" asp-for="RoleName" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 pl-0">
                            <label>
                                توضیحات
                            </label>
                        </div>
                        <div class="col-md-12">
                            <textarea asp-for="Description" cols="40" rows="5" placeholder="توضیحات" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary float-left" value="افزودن نقش" />
                    </div>
                </div>
            </form>
        </div>
        <a asp-action="Index" class="m-4"><i class="fa fa-arrow-alt-circle-right"> بازگشت </i></a>
    </div>