@model BookShop.ViewModel.UsersViewModel
@inject BookShop.Utilities.ConvertDate converDate
@{
    ViewData["Title"] = "Details";
}

<style>
    .nav {
        padding-right: 0px !important;
    }
</style>
<div class="col-md-9">
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12 user-profil-part pull-left">
            <div class="row ">
                <div class="col-md-12 col-md-12-sm-12 mb-2 col-xs-12 user-image text-center">
                    @if (Model.ImagePath != null)
                    {
                        <img src="~/imgs/@Model.ImagePath" width="150" height="100" />
                    }

                    else
                    {
                        <img src="/images/UserPic.png" height="140" />
                    }
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12 user-detail-section1 text-center">
                    <button class="btn btn-success btn-block follow">ویرایش اطلاعات کاربر </button>
                    <button class="btn btn-warning btn-block mb-2">تنظیم مجدد رمز عبور</button>
                </div>
            </div>
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12 pull-right profile-right-section">
            <div class="row profile-right-section-row">
                <div class="col-md-12 profile-header">
                    <div class="row">
                        <div class="col-md-8 col-sm-6 col-xs-6 profile-header-section1 pull-left">
                            <h5>@Model.FirstName  @Model.LastName</h5>
                            <h6>
                                @foreach(var item in Model.Roles)
                                {
                                <span class="badge badge-dark">@item</span>
                                }
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#profile" role="tab" data-toggle="tab"><i class="fas fa-user-circle"></i>اطلاعات شخصی</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#buzz" role="tab" data-toggle="tab"><i class="fas fa-edit"></i>مدیریت کاربر</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade show active" id="profile">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>نام</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.FirstName</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>نام خانوادگی</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.LastName</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>ایمیل</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.Email</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>شماره موبایل</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.Mobile</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>تاریخ تولد</label>
                                        </div>
                                        <div class="col-md-6">
                                            @if (@Model.BirthDate!=null)
                                            {
                                                <p>@converDate.ToShamsi(Model.BirthDate.Value, "yyyy/MM/dd")</p>
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>تاریخ عضویت</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@converDate.ToShamsi(Model.RegisterDate.Value,"dddd d MMMM yyyy ساعت HH:mm:ss")</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>آخرین بازدید</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                @if (Model.LastVisit != null)
                                                {
                                                @converDate.ToShamsi((DateTime)Model.LastVisit, "dddd d MMMM yyyy ساعت HH:mm:ss")
                                                }
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="buzz">
                                    <div class="table-responsive">
                                        <table class="table table-bordered ">
                                            <thead>
                                                <tr>
                                                    <td>
                                                        ویژگی کاربر
                                                    </td>
                                                    <td>
                                                        وضعیت
                                                    </td>
                                                    <td>
                                                        عملیات
                                                    </td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        نام کاربری
                                                    </td>
                                                    <td>
                                                        @Model.UserName
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-info btn-sm">ویراش اطلاعات کاربر</button>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        وضعیت حساب کاربری
                                                    </td>
                                                    <td>
                                                        <label class="badge @(Model.IsActive==true?"badge-success":"badge-danger")">
                                                            @(Model.IsActive==true?"فعال":"غیرفعال")
                                                        </label>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-danger btn-sm">غیرفعال شود</button>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        وضعیت ایمیل
                                                    </td>
                                                    <td>
                                                        <label class="badge @(Model.ConfrmEmail==true?"badge-success":"badge-danger")">
                                                            @(Model.ConfrmEmail==true?"تایید شده":"تایید نشده")
                                                        </label>
                                                    </td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        وضعیت شماره موبایل
                                                    </td>
                                                    <td>
                                                        <label class="badge @(Model.ConfrmMobile==true?"badge-success":"badge-danger")">
                                                            @(Model.ConfrmMobile == true ? "تایید شده" : "تایید نشده")
                                                        </label>
                                                    </td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        امکان قفل شدن حساب کاربری
                                                    </td>
                                                    <td>
                                                        <label class="badge @(Model.IsLock==true?"badge-success":"badge-danger")">
                                                            @(Model.IsLock == true ? "فعال" : "غیرفعال")
                                                        </label>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-success btn-sm">فعال شود</button>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        اعتبارسنجی دو مرحله ای
                                                    </td>
                                                    <td>
                                                        <label class="badge @(Model.TwoFactorRegister==true?"badge-success":"badge-danger")">
                                                            @(Model.TwoFactorRegister == true ? "فعال" : "غیرفعال")
                                                        </label>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-success btn-sm">فعال شود</button>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>زمان خروج از حالت قفل</td>
                                                    <td>
                                                        @Model.EndLockOut
                                                    </td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


