@model BookShop.Models.Author

@{
    ViewData["Title"] = "ایجاد نویسنده";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="card p-0">
        <div class="card-header bg-light">
            ایجاد نویسنده
        </div>
        <form asp-action="Create">
            <div class="card-body">
                <div class="col-md-12 row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light clearfix">
                <a asp-action="Index" class="btn"><i class="fa fa-arrow-alt-circle-right"> بازگشت </i></a>
                <button type="submit" class="btn btn-primary float-left">ایجاد نویسنده</button>
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
